{
    "include": [
        "**/*",
    ],
    "compilerOptions": {
        "lib": ["ES2022"],
        "types": ["node"],
        "target": "ES2022",
        "module": "ES2022",
        "moduleResolution": "bundler",
        "rootDirs": [".",],
        "baseUrl": ".",
        "paths": {
            "~/*": ["./app/*"]
        },
        "esModuleInterop": true,
        "verbatimModuleSyntax": true,
        "noEmit": true,
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "strict": true
    }
}
